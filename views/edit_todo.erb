<div class="row">
  <div class="col-lg-4" id="new_todo_form">
    <form method="post" action="/todos/<%= todo["id"]%>">
      <input type="hidden" name="_method" value="patch" />
      <ul class="edit_todos">
        <li>
          <label for="body">Edit ToDo</label>
          <input type="text" name="body" id="body" class="form-control" value="<%= todo["body"] %>"/>
        </li>
        <li>
          <input type="submit" value="Update ToDo" class="btn btn-success"/>
        </li>
      </ul>
    </form>
  </div>
</div>